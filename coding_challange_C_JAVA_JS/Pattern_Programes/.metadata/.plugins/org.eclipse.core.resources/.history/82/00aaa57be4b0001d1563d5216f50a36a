#include <stdio.h>
#include <stdlib.h>

int main(void) {

int row;

printf("ENter your rows:");
scanf("%d",&row);


for(int i=1;i<=row;i++){


	for(int j=1;j<=i;j++){



		printf("*");


	}

	printf("\n");


	for(int n=1;n<=;n++){


		printf("*");
		printf("\n");

	}



}











	return EXIT_SUCCESS;
}
